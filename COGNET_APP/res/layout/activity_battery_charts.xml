<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BatteryCharts" >

    <com.androidplot.xy.XYPlot
        android:id="@+id/timeserieBatteryChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        title="Battery Discharge" />

    <TextView
        android:id="@+id/textvalueVoltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timeserieBatteryChart"
        android:layout_marginLeft="15dp"
        
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textvalueCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textvalueVoltage"
        android:layout_alignBottom="@+id/textvalueVoltage"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/textvalueVoltage"       
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textvalueTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textvalueVoltage"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/textvalueCharge"        
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>